{
  "hooks": {
    "PostToolUse": [

      {
        "hooks": [
          {
            "command": "cupcake eval --policy-dir $CLAUDE_PROJECT_DIR/.cupcake",
            "type": "command"
          }
        ],
        "matcher": "Edit|MultiEdit|Write"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "cupcake eval --policy-dir $CLAUDE_PROJECT_DIR/.cupcake",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "cupcake eval --policy-dir $CLAUDE_PROJECT_DIR/.cupcake",
            "type": "command"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "cupcake eval --policy-dir $CLAUDE_PROJECT_DIR/.cupcake",
            "type": "command"
          }
        ]
      }
    ]
  }

}