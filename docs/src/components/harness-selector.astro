---
// Harness selector component with tab functionality
---

<div class="harness-tabs">
  <div class="tab-buttons">
    <button class="tab-button active" data-harness="claude">Claude Code</button>
    <button class="tab-button" data-harness="cursor">Cursor</button>
  </div>
  <slot />
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons = document.querySelectorAll('.tab-button');
    const allTabContents = document.querySelectorAll('.tab-content[data-harness]');

    tabButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const harness = button.getAttribute('data-harness');
        tabButtons.forEach((btn) => btn.classList.remove('active'));
        button.classList.add('active');
        allTabContents.forEach((content) => {
          if (content.getAttribute('data-harness') === harness) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        });
      });
    });
  });
</script>

<style>
  .harness-tabs {
    margin: 2rem 0;
  }

  .tab-buttons {
    display: flex;
    gap: 0.5rem;
    border-bottom: 2px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 1.5rem;
  }

  .tab-button {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    border-bottom: 2px solid transparent;
    margin-bottom: -2px;
    transition: all 0.2s;
  }

  .tab-button:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  .tab-button.active {
    color: #e2ccff;
    border-bottom-color: #e2ccff;
  }

  :global(.tab-content) {
    display: none;
  }

  :global(.tab-content.active) {
    display: block;
  }
</style>
